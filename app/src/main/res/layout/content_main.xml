<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="template.healthgame.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/points"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack"
        android:alpha="0.9"
        android:textSize="20dp"
        android:text="Points Earned:" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:text="0" />

    <template.healthgame.FoodCardView
        android:id="@+id/top_food_card"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp">
    </template.healthgame.FoodCardView>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/my_border"
        android:layout_toRightOf="@id/top_food_card"
        android:orientation="vertical"
        android:elevation="1dp">

        <TextView
            android:id="@+id/top_food_meal_classifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:text="Breakfast"/>

        <TextView
            android:id="@+id/top_food_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:text="EntrÃ©"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top_food_nutrition"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/nutrition_icon"/>

            <ImageView
                android:id="@+id/top_food_description"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/info_icon"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/bottom_food_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:layout_alignParentRight="false"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Food 2"
        />


    <template.healthgame.FoodCardView
        android:id="@+id/bottom_food_card"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="false">
    </template.healthgame.FoodCardView>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/my_border"
        android:layout_toRightOf="@id/bottom_food_card"
        android:elevation="1dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottom_food_meal_classifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:text="Lunch, Dinner"/>

        <TextView
            android:id="@+id/bottom_food_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:text="Appetizer"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bottom_food_nutrition"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/nutrition_icon"/>

            <ImageView
                android:id="@+id/bottom_food_description"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/info_icon"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/top_food_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Food 1"
        android:layout_above="@+id/top_food_card"
        android:layout_alignLeft="@+id/top_food_card"
        android:layout_alignStart="@+id/top_food_card"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
